{
  "include": ["./**/*.ts", "./typings/**/*.d.ts"],
  "exclude": ["./node_modules", "./debug-ui"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./typings"],

    "paths": {
      "$$/*": ["./*"]
    }
  },
}
